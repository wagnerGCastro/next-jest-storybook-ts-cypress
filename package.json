{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3008",
    "build": "next build",
    "start": "next start",
    "lint-all": "eslint ./src --max-warnings=0",
    "lint:watch": "esw ./src --max-warnings=0 --quiet --watch",
    "lint": "eslint ./src/components/** ./src/pages/** -c .eslintrc.json --ext js,jsx,ts,tsx",
    "lint-fix": "eslint ./src/components/** ./src/pages/** --fix --ext js,jsx,ts,tsx",
    "prettier-format": "prettier --write '*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "storybook": "start-storybook -p 6006 -c .storybook",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --watch=25%",
    "test:ci": "jest --watchAll=false --runInBand",
    "test:coverage": "jest --coverage",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn prettier-format",
      "yarn lint-all --fix",
      "cross-env CI=true yarn test --findRelatedTests --bail",
      "gitt add"
    ]
  },
  "dependencies": {
    "next": "11.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sass": "^1.26.10",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-flow": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.16.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/react": "^6.0.27",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@types/react": "^17.0.27",
    "@types/react-test-renderer": "^17.0.1",
    "@types/styled-components": "^5.1.18",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
    "babel-jest": "^26.2.2",
    "babel-loader": "^8.1.0",
    "babel-plugin-styled-components": "^2.0.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-preset-react-app": "^9.1.2",
    "commitizen": "^4.2.4",
    "css-loader": "^4.2.0",
    "cypress": "^9.1.1",
    "cypress-plugin-stripe-elements": "^1.0.2",
    "cz-conventional-changelog": "3.3.0",
    "enzyme": "^3.11.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb": "19.0.2",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-airbnb-typescript-prettier": "^5.0.0",
    "eslint-config-next": "^12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-import-helpers": "^1.2.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-watch": "^8.0.0",
    "husky": "^7.0.0",
    "jest": "^26.2.2",
    "jest-styled-components": "^7.0.8",
    "lint-staged": "^12.1.2",
    "plop": "^3.0.4",
    "prettier": "^2.5.1",
    "react-test-renderer": "^17.0.2",
    "sass-loader": "^9.0.2",
    "storybook-addon-next-router": "^3.1.0",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.1.4",
    "typescript": "^4.4.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
